<%-include('./partials/header.ejs')%>

  <%-include('./partials/navbar.ejs')%>

    <div style="margin-top: 100px;display: flex;">
      <div class="col-6 col-sm-5 p-sm-1 p-md-1 m-3 p-3 p-sm-md-1 m-sm-md-1">
        <section style=" margin-left: 35px;" class="d-none d-sm-block ">
          <div class="container text-dark">
            <div class="row d-flex justify-content-center">
              <div class="">
                <h5 class="text-white fs-2 mb-3 p-3 bg-primary rounded">Add Comment</h5>
                <div class="card">
                  <div class="card-body p-4">
                    <div class="d-flex flex-start w-100">
                      <img class="rounded-circle shadow-1-strong me-3" src="/images/avatar.svg" alt="avatar" width="25"
                        height="35" />

                      <div class="w-100">

                        <form method="post">

                          <div class="form-outline">
                            <input type="text" name="name" placeholder="your name" class="form-control mb-1">
                            <textarea name="textarea" class="form-control" id="textAreaExample" rows="4"
                              placeholder="comment..."></textarea>
                          </div>

                          <div class="d-flex justify-content-between mt-3" style="float: right;">

                            <button type="submit" class="btn btn-success">
                              Send <i class="fas fa-long-arrow-alt-right ms-1"></i>
                            </button>

                          </div>
                        </form>
                      </div>

                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- for mobile size  -->
        <section style=" margin-left: 35px;" class="d-block  d-sm-none">
          <div class="container text-dark">
            <div class="row d-flex justify-content-center">
              <div class="">
                <h6 class="text-white mb-3 p-2 bg-primary rounded">Add Comment</h6>
                <div class="card">
                  <div class="card-body p-2">
                    <div class="d-flex flex-start w-100">

                      <div class="w-100">

                        <form method="post">

                          <div class="form-outline">
                            <input type="text" name="name" placeholder="name" class="form-control mb-1">
                            <textarea name="textarea" class="form-control" id="textAreaExample" rows="4"
                              placeholder="comment"></textarea>
                          </div>

                          <div class="d-flex justify-content-between mt-1" style="float: right;">

                            <button type="submit" class="btn btn-success">
                              Send <i class="fas fa-long-arrow-alt-right ms-1"></i>
                            </button>

                          </div>
                        </form>
                      </div>

                    </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </section>


      </div>

      <!-- read daocument -->

      <div class="col-sm-6 m-3 p-3 col-6 col-sm-5 p-sm-1 p-md-1 m-3 p-3 p-sm-md-1 m-sm-md-1 d-none d-sm-block">
        <h2 class="text-white fs-2 mb-3 p-3 bg-success rounded"> View Comments</h2>
        <div id="scrollable">
          <table class="table table-hover rows-6">
            <tbody>
              <% data.forEach((items)=>{ %>
                <tr>
                  <td class="text-danger fw-bold w-25">
                    <%= items.name %> :
                  </td>
                  <td>
                    <%= items.textarea %>
                  </td>
                  <td>
                    <form action="/comment/<%- items._id%>" class="d-inline">
                      <button class="btn">
                        <i class="fa fa-trash text-danger" aria-hidden="true"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- for mobile size -->

      <div class="col-sm-6 m-3 me-sm-5 p-3 col-6 col-sm-5 p-sm-1 p-md-1 m-3 p-3 p-sm-md-1 m-sm-md-1 d-block d-sm-none">
        <h6 class="text-white mb-3 p-3 bg-success rounded"> View Comments</h6>

        <div class="col-sm-6 m-3 p-3 col-6 col-sm-5 p-sm-1 p-md-1 m-3 p-3 p-sm-md-1 m-sm-md-1 d-block  d-sm-none">
          <h6 class="text-white mb-3 p-2 bg-success rounded"> View Comments</h6>

          <div id="scrollable">
            <table class="table table-hover rows-6">
              <tbody>
                <% data.forEach((items)=>{ %>
                  <tr>
                    <td class="text-danger fw-bold w-25">
                      <%= items.name %> :
                    </td>
                    <td>
                      <%= items.textarea %>
                    </td>
                    <td>
                      <form action="/comment/<%- items._id%>" class="d-inline">
                        <button class="btn">
                          <i class="fa fa-trash text-danger" aria-hidden="true"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>


      </div>